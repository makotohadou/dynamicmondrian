<Schema name="Itec-Schema">
	<Cube name="Produto Transferido">
		<Table name="V_EST_PROD_TRANSF_IT_RESSUP_CUBO" schema="dbo" />

		<!-- Filial Destino -->
		<Dimension name="Filial Destino">
			<Hierarchy hasAll="true" allMemberName="Todas as Filiais">
				<Level name="Filial Destino" column="CD_FIL_DEST"
					uniqueMembers="true" />
			</Hierarchy>
		</Dimension>

		<!-- Filial Origem -->
		<Dimension name="Filial Origem">
			<Hierarchy hasAll="true" allMemberName="Todas as Filiais">
				<Level name="Filial Origem" column="CD_FILIAL"
					uniqueMembers="true" />
			</Hierarchy>
		</Dimension>

		<Dimension name="Data Transferencia">
			<Hierarchy hasAll="true" allMemberName="Todas as Datas">
				<Level type="String" name="Data Transferencia"
					column="DT_TRANSF" uniqueMembers="true">
				</Level>
			</Hierarchy>
		</Dimension>

		<Dimension name="Status">
			<Hierarchy hasAll="true" allMemberName="Todos os Status">
				<Level type="String" name="Status" column="STATUS"
					uniqueMembers="true">
				</Level>
			</Hierarchy>
		</Dimension>

		<Dimension name="Qt Est Depo Res">
			<Hierarchy hasAll="true" allMemberName="Todos os Status">
				<Level type="String" name="Qt Est Depo Res"
					column="QT_EST_DEPO_RES" uniqueMembers="true">
				</Level>
			</Hierarchy>
		</Dimension>

		<Dimension name="Linha">
			<Hierarchy hasAll="true">
				<Level name="Linha" column="DS_ARV_MERC_LINHA"
					uniqueMembers="true" />
			</Hierarchy>
		</Dimension>

		<Dimension name="Produto">
			<Hierarchy hasAll="true">
				<Level name="Produto" column="DS_PROD" uniqueMembers="true" />
			</Hierarchy>
		</Dimension>


		<!-- Measures tem que vir primeiro. -->
		<!-- https://stackoverflow.com/questions/26191174/is-there-a-limit-on-the-number-of-measures-in-mondrian-or-more-specifically-saik/ -->

		<Measure name="Qtd Produto" column="QTDE_PROD"
			aggregator="sum" />
		<Measure name="Qtd Solicitada" column="QT_SOL"
			aggregator="sum" />
		<Measure name="Qtd Atendida" column="QT_AT" aggregator="sum" />
		<Measure name="Valor Solicitado" column="VLR_SOL"
			aggregator="sum" />
		<Measure name="Valor Atendido" column="VLR_AT"
			aggregator="sum" />
		<Measure name="Qtd Caixa Fechada" column="QT_CAIXA_FECHADA"
			aggregator="sum" />
		<Measure name="Pontos" column="PTOS" aggregator="sum" />
		<Measure name="Qtd Necessidade" column="QT_NECESSIDADE"
			aggregator="sum" />
		<Measure name="Qtd Atend Necess" column="QT_ATEND_NECES"
			aggregator="sum" />

		<CalculatedMember name="Dif Qtde Ressup Atend"
			dimension="Measures"
			formula="[Measures].[Qtd Solicitada] - [Measures].[Qtd Atendida]" />
		<CalculatedMember name="% Atendido"
			dimension="Measures"
			formula="[Measures].[Qtd Atendida] / [Measures].[Qtd Solicitada] * 100" />


		<CalculatedMember name="Dif Valor Ressup Atend"
			dimension="Measures"
			formula="[Measures].[Valor Solicitado] - [Measures].[Valor Atendido]">
		</CalculatedMember>
		<CalculatedMember name="% Valor Atendido"
			dimension="Measures"
			formula="[Measures].[Valor Atendido] / [Measures].[Valor Solicitado] * 100" />

		<CalculatedMember name="% Qtd Pontos"
			dimension="Measures"
			formula="[Measures].[Pontos] / [Measures].[Qtd Produto] * 100" />
		<CalculatedMember name="% Atend Necessidade"
			dimension="Measures"
			formula="[Measures].[Qtd Atend Necess] / [Measures].[Qtd Solicitada] * 100" />

	</Cube>
	<Cube name="Vendas Produtos">
		<View alias='Visao'> <SQL dialect="mssql"> <![CDATA[SELECT * FROM V_RELATORIO_MOVIMENTO_VENDAS_PRODUTOS 
			WHERE DtMovimento BETWEEN %DATAINICIAL% AND %DATAFINAL%]]> </SQL> </View> 
		<!--<Table name="V_RELATORIO_MOVIMENTO_VENDAS_PRODUTOS_LITE"
			schema="dbo" /> -->

		<!-- Filial -->
