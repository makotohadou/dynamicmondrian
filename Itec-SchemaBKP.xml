			</Hierarchy>
		</Dimension>

		<Dimension name="Data Movimentacao">
			<Hierarchy hasAll="true">
				<Level type="String" name="Data Movimentacao"
					 uniqueMembers="true">
					<KeyExpression>
						<SQL dialect="mssql">
							CONVERT(VARCHAR,DtMovimento,120)
						</SQL>
